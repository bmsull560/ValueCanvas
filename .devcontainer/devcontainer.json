{
  "name": "ValueCanvas",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },

  "remoteUser": "vscode",

  // REMOVE heavy memory override
  "containerEnv": {},

  // Disable heavy boot process
  "postCreateCommand": "",

  // Port forwarding stays the same
  "forwardPorts": [3000, 8000, 5432, 16686, 9090, 3001],

  // Remove conflicting docker mounts
  "mounts": [],

  // Avoid name conflicts
  "runArgs": [
    "--name=valuecanvas-dev"
  ],

  "customizations": {
    "windsurf": {
      // DO NOT install heavy extensions automatically
      "extensions": []
    }
  }
}
