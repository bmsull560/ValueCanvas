{
  "dashboard": {
    "title": "Tenant Cost Dashboard",
    "tags": ["tenant", "cost", "llm", "infra"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "LLM Cost per Tenant (last 24h)",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(increase(llm.cost.total[24h])) by (tenant_id)",
            "legendFormat": "{{tenant_id}}",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "min": 0
          }
        }
      },
      {
        "id": 2,
        "title": "Approximate Infra Cost Share per Tenant",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate(valuecanvas_http_requests_total{tenant_id!=\"unknown\"}[5m])) by (tenant_id) / sum(rate(valuecanvas_http_requests_total{tenant_id!=\"unknown\"}[5m]))",
            "legendFormat": "{{tenant_id}}",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 3,
        "title": "Tenant Cost Summary (DB View)",
        "type": "table",
        "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT tenant_id, total_llm_tokens, approx_llm_cost_usd FROM tenant_cost_summary ORDER BY approx_llm_cost_usd DESC",
            "format": "table"
          }
        ]
      }
    ]
  },
  "folderId": 0,
  "overwrite": true
}
