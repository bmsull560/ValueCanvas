{
  "dashboard": {
    "title": "Value Prediction Accuracy Dashboard",
    "tags": ["predictions", "accuracy", "business-metrics"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5m",
    "panels": [
      {
        "id": 1,
        "title": "Prediction Accuracy Over Time",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT time_bucket, prediction_type, (1 - avg_error_percent / 100) * 100 as accuracy FROM value_prediction_accuracy_metrics WHERE time_bucket \u003e NOW() - INTERVAL '30 days' ORDER BY time_bucket",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 2,
        "title": "Average Error Percentage",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT time_bucket, prediction_type, avg_error_percent FROM value_prediction_accuracy_metrics WHERE time_bucket \u003e NOW() - INTERVAL '30 days' ORDER BY time_bucket",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 3,
        "title": "Predicted vs Actual Values",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT time_bucket, prediction_type, avg_predicted_value as predicted, avg_actual_value as actual FROM value_prediction_accuracy_metrics WHERE time_bucket \u003e NOW() - INTERVAL '30 days' ORDER BY time_bucket",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 4,
        "title": "Predictions with Actuals",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT time_bucket, prediction_type, predictions_with_actuals FROM value_prediction_accuracy_metrics WHERE time_bucket \u003e NOW() - INTERVAL '30 days' ORDER BY time_bucket",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Accuracy by Prediction Type",
        "type": "bargauge",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT prediction_type, (1 - AVG(avg_error_percent) / 100) * 100 as accuracy FROM value_prediction_accuracy_metrics WHERE time_bucket \u003e NOW() - INTERVAL '7 days' GROUP BY prediction_type ORDER BY accuracy DESC",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 70, "color": "yellow" },
                { "value": 85, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Overall Accuracy (Last 7 Days)",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "rawSql": "SELECT (1 - AVG(avg_error_percent) / 100) * 100 as accuracy FROM value_prediction_accuracy_metrics WHERE time_bucket \u003e NOW() - INTERVAL '7 days'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 70, "color": "yellow" },
                { "value": 85, "color": "green" }
              ]
            }
          }
        }
      }
    ]
  }
}
