{
  "dashboard": {
    "title": "Backend API Performance",
    "tags": ["backend", "api", "observability"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Requests per Second by Route",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate(valuecanvas_http_requests_total[5m])) by (route, method)",
            "legendFormat": "{{route}} {{method}}",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "min": 0
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Latency (p50/p95/p99) by Route",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "histogram_quantile(0.50, sum(rate(valuecanvas_http_request_duration_ms_bucket[5m])) by (le, route))",
            "legendFormat": "{{route}} p50",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          },
          {
            "refId": "B",
            "expr": "histogram_quantile(0.95, sum(rate(valuecanvas_http_request_duration_ms_bucket[5m])) by (le, route))",
            "legendFormat": "{{route}} p95",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          },
          {
            "refId": "C",
            "expr": "histogram_quantile(0.99, sum(rate(valuecanvas_http_request_duration_ms_bucket[5m])) by (le, route))",
            "legendFormat": "{{route}} p99",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "min": 0
          }
        }
      },
      {
        "id": 3,
        "title": "4xx / 5xx Error Rate by Route",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate(valuecanvas_http_requests_total{status_code=~\"4..\"}[5m])) by (route) / sum(rate(valuecanvas_http_requests_total[5m])) by (route)",
            "legendFormat": "{{route}} 4xx",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          },
          {
            "refId": "B",
            "expr": "sum(rate(valuecanvas_http_requests_total{status_code=~\"5..\"}[5m])) by (route) / sum(rate(valuecanvas_http_requests_total[5m])) by (route)",
            "legendFormat": "{{route}} 5xx",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 4,
        "title": "Overall Error Rate (Last 5m)",
        "type": "stat",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate(valuecanvas_http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(valuecanvas_http_requests_total[5m]))",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 5,
        "title": "LLM Tokens Processed",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "rate(llm.tokens.total[5m])",
            "legendFormat": "tokens/s",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 6,
        "title": "LLM Requests",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "rate(llm.requests.total[5m])",
            "legendFormat": "requests/s",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "min": 0
          }
        }
      },
      {
        "id": 7,
        "title": "Stripe Webhooks by Status",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate(billing_stripe_webhooks_total[5m])) by (event_type, status)",
            "legendFormat": "{{event_type}} {{status}}",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "min": 0
          }
        }
      },
      {
        "id": 8,
        "title": "Billing Job Failures",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate(billing_jobs_failures_total[5m])) by (job, reason)",
            "legendFormat": "{{job}} {{reason}}",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "min": 0
          }
        }
      }
    ]
  },
  "folderId": 0,
  "overwrite": true
}
