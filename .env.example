# ValueCanvas Environment Configuration
# Copy this file to .env.local for local development
# Copy this file to .env.production for production deployment

# ============================================================================
# APPLICATION
# ============================================================================

# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application URL
VITE_APP_URL=http://localhost:5173

# API Base URL
VITE_API_BASE_URL=http://localhost:3000

# ============================================================================
# AGENT FABRIC
# ============================================================================

# Agent API Base URL
VITE_AGENT_API_URL=http://localhost:8000/api/agents

# Agent API Timeout (milliseconds)
VITE_AGENT_API_TIMEOUT=30000

# Enable Circuit Breaker
VITE_AGENT_CIRCUIT_BREAKER_ENABLED=true

# Circuit Breaker Failure Threshold
VITE_AGENT_CIRCUIT_BREAKER_THRESHOLD=5

# Circuit Breaker Cooldown Period (milliseconds)
VITE_AGENT_CIRCUIT_BREAKER_COOLDOWN=60000

# Enable Agent Request Logging
VITE_AGENT_LOGGING_ENABLED=false

# Agent WebSocket URL (for real-time status updates)
VITE_AGENT_WEBSOCKET_URL=ws://localhost:8000/ws/agents

# ============================================================================
# SUPABASE / DATABASE
# ============================================================================

# Supabase Project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (public)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (server-side only, DO NOT expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# AUTHENTICATION
# ============================================================================

# JWT Secret (server-side only)
JWT_SECRET=your-jwt-secret-here

# Session Timeout (milliseconds)
VITE_SESSION_TIMEOUT=3600000

# Enable Multi-Factor Authentication
VITE_MFA_ENABLED=false

# ============================================================================
# SECURITY
# ============================================================================

# Enable HTTPS Only
VITE_HTTPS_ONLY=false

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Enable CSRF Protection
CSRF_PROTECTION_ENABLED=true

# Content Security Policy
CSP_ENABLED=true

# ============================================================================
# HASHICORP VAULT (Production)
# ============================================================================

# Vault Address
VAULT_ADDR=https://vault.example.com:8200

# Vault Token (use Kubernetes auth in production)
VAULT_TOKEN=your-vault-token-here

# Vault Namespace
VAULT_NAMESPACE=valuecanvas

# Enable Vault Integration
VAULT_ENABLED=false

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Sentry DSN (Error Tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Enable Sentry
VITE_SENTRY_ENABLED=false

# Sentry Environment
VITE_SENTRY_ENVIRONMENT=development

# Sentry Sample Rate (0.0 to 1.0)
VITE_SENTRY_SAMPLE_RATE=1.0

# DataDog API Key (Monitoring)
DATADOG_API_KEY=your-datadog-api-key

# Enable DataDog
DATADOG_ENABLED=false

# Prometheus Metrics Endpoint
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# OpenTelemetry Configuration
OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=valuecanvas-api
OTEL_SERVICE_VERSION=1.0.0
OTLP_AUTH_TOKEN=

# CloudWatch Logs
CLOUDWATCH_LOG_GROUP=/valuecanvas/application
CLOUDWATCH_LOG_STREAM=production
CLOUDWATCH_ENABLED=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable SDUI Debug Mode
VITE_SDUI_DEBUG=false

# Enable Agent Fabric
VITE_AGENT_FABRIC_ENABLED=true

# Enable Workflow Orchestration
VITE_WORKFLOW_ENABLED=true

# Enable Compliance Validation
VITE_COMPLIANCE_ENABLED=true

# Enable Multi-Tenant Support
VITE_MULTI_TENANT_ENABLED=true

# Enable Usage Tracking
VITE_USAGE_TRACKING_ENABLED=false

# Enable Billing Integration
VITE_BILLING_ENABLED=false

# ============================================================================
# LLM SERVICES
# ============================================================================

# Together.ai API Key (Primary LLM Provider)
TOGETHER_API_KEY=your-together-api-key-here

# OpenAI API Key (Fallback LLM Provider)
OPENAI_API_KEY=your-openai-api-key-here

# Default LLM Model
LLM_DEFAULT_MODEL=meta-llama/Llama-3-70b-chat-hf

# LLM Request Timeout (milliseconds)
LLM_TIMEOUT=30000

# Enable LLM Caching
LLM_CACHE_ENABLED=true

# LLM Cache TTL (seconds)
LLM_CACHE_TTL=86400

# ============================================================================
# CACHING
# ============================================================================

# Redis URL (for caching, sessions, and queue)
REDIS_URL=redis://localhost:6379

# Redis Password (if required)
REDIS_PASSWORD=

# Enable Redis
REDIS_ENABLED=true

# Cache TTL (seconds)
CACHE_TTL=3600

# ============================================================================
# EMAIL & NOTIFICATIONS
# ============================================================================

# SMTP Host
SMTP_HOST=smtp.example.com

# SMTP Port
SMTP_PORT=587

# SMTP User
SMTP_USER=noreply@valuecanvas.com

# SMTP Password
SMTP_PASSWORD=your-smtp-password

# Email From Address
EMAIL_FROM=noreply@valuecanvas.com

# Enable Email Notifications
EMAIL_ENABLED=false

# ============================================================================
# AWS SERVICES
# ============================================================================

# AWS Region
AWS_REGION=us-east-1

# AWS Access Key ID
AWS_ACCESS_KEY_ID=your-access-key-id

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Bucket Name (for backups and uploads)
S3_BUCKET_NAME=valuecanvas-backups

# Enable S3 Storage
S3_ENABLED=false

# AWS Secrets Manager
SECRETS_MANAGER_SECRET_NAME=valuecanvas/production/secrets
SECRETS_MANAGER_ENABLED=false

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Enable Hot Module Replacement
VITE_HMR_ENABLED=true

# Enable Source Maps
VITE_SOURCE_MAPS=true

# Enable React DevTools
VITE_REACT_DEVTOOLS=true

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================================================
# MESSAGE QUEUE
# ============================================================================

# BullMQ Queue Name
QUEUE_NAME=llm-processing

# Queue Concurrency (number of workers)
QUEUE_CONCURRENCY=10

# Queue Rate Limit (jobs per minute)
QUEUE_RATE_LIMIT=100

# Enable Queue
QUEUE_ENABLED=true

# ============================================================================
# CHAOS ENGINEERING
# ============================================================================

# Enable Chaos Engineering (NEVER in production without explicit flag)
CHAOS_ENABLED=false

# Chaos Probability (0.0 to 1.0)
CHAOS_PROBABILITY=0.1

# ============================================================================
# TESTING
# ============================================================================

# Test Database URL
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/valuecanvas_test

# Test Supabase URL
TEST_SUPABASE_URL=https://your-test-project.supabase.co

# Test Supabase Key
TEST_SUPABASE_KEY=your-test-anon-key

# Test JWT Secret
TEST_JWT_SECRET=test-jwt-secret

# Test API URL
TEST_API_URL=http://localhost:3000

# Test Auth Token
TEST_AUTH_TOKEN=test-token

# Enable Test Mode
TEST_MODE=false

# Mock Agent Responses
VITE_MOCK_AGENTS=false

# Mock LLM Responses
MOCK_LLM_ENABLED=false
