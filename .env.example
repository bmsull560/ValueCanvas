# ValueCanvas Environment Configuration
# Copy this file to .env.local for local development

# ============================================================================
# Application
# ============================================================================
VITE_APP_ENV=development
VITE_APP_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:3000

# ============================================================================
# Supabase Configuration
# ============================================================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# IMPORTANT: Service role key should ONLY be set in server-side environments
# NEVER prefix server secrets with VITE_ (exposes to client bundle)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# LLM Configuration (Frontend)
# ============================================================================

# LLM Provider Selection
# Options: 'together' | 'openai'
# Default: together
VITE_LLM_PROVIDER=together

# LLM Gating Control
# Enable/disable cost-control gating logic (model selection based on task complexity)
# Options: 'true' | 'false'
# Default: true
VITE_LLM_GATING_ENABLED=true

# ============================================================================
# LLM API Keys (Backend/Server-Side ONLY)
# ============================================================================

# Together.ai API Key
# Required when VITE_LLM_PROVIDER=together
# Get your key from: https://api.together.xyz/settings/api-keys
# WARNING: Do NOT prefix with VITE_ (server-side only)
TOGETHER_API_KEY=your-together-api-key-here

# OpenAI API Key
# Required when VITE_LLM_PROVIDER=openai OR for fallback
# Get your key from: https://platform.openai.com/api-keys
# WARNING: Do NOT prefix with VITE_ (server-side only)
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# Authentication
# ============================================================================
JWT_SECRET=your-jwt-secret-here
VITE_SESSION_TIMEOUT=3600000
VITE_MFA_ENABLED=false

# ============================================================================
# Redis Cache (Optional)
# ============================================================================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ============================================================================
# Feature Flags
# ============================================================================
VITE_SDUI_DEBUG=true
VITE_AGENT_FABRIC_ENABLED=true
VITE_WORKFLOW_ENABLED=true
VITE_COMPLIANCE_ENABLED=true
VITE_MULTI_TENANT_ENABLED=false
VITE_USAGE_TRACKING_ENABLED=false
VITE_BILLING_ENABLED=false

# ============================================================================
# Agent Configuration
# ============================================================================
VITE_AGENT_API_URL=http://localhost:8000/api/agents
VITE_AGENT_API_TIMEOUT=30000
VITE_AGENT_CIRCUIT_BREAKER_ENABLED=true
VITE_AGENT_CIRCUIT_BREAKER_THRESHOLD=5
VITE_AGENT_CIRCUIT_BREAKER_COOLDOWN=60000
VITE_AGENT_LOGGING_ENABLED=true
VITE_AGENT_WEBSOCKET_URL=ws://localhost:8000/ws/agents

# ============================================================================
# Security
# ============================================================================
VITE_HTTPS_ONLY=false
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_PER_MINUTE=60
CSRF_PROTECTION_ENABLED=true
CSP_ENABLED=true

# ============================================================================
# Monitoring (Optional)
# ============================================================================
VITE_SENTRY_ENABLED=false
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_SAMPLE_RATE=1.0

DATADOG_ENABLED=false
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ============================================================================
# Email (Optional)
# ============================================================================
EMAIL_ENABLED=false
EMAIL_FROM=noreply@valuecanvas.local
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================================================
# Storage (Optional)
# ============================================================================
S3_ENABLED=false
S3_BUCKET_NAME=
S3_REGION=us-east-1

# ============================================================================
# Vault (Optional - Advanced)
# ============================================================================
VAULT_ENABLED=false
VAULT_ADDR=
VAULT_NAMESPACE=valuecanvas

# ============================================================================
# Development
# ============================================================================
VITE_HMR_ENABLED=true
VITE_SOURCE_MAPS=true
VITE_REACT_DEVTOOLS=true
LOG_LEVEL=info

# ============================================================================
# Testing
# ============================================================================
TEST_MODE=false
VITE_MOCK_AGENTS=false

# ============================================================================
# Containerized environment defaults
# ============================================================================
# Database
DB_NAME=myapp
DB_USER=postgres
DB_PASSWORD=${DB_PASSWORD}
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}

# Redis
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Application
PORT=8000
NODE_ENV=development
